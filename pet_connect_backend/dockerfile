FROM python:3.9

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements file and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install data science packages explicitly (for recommendation engine)
RUN pip install --no-cache-dir numpy scikit-learn pandas django-cors-headers djangorestframework

# Copy project files
COPY . .

# Expose the port (not necessary with host network but good practice)
EXPOSE 8000

# Run the Django server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]